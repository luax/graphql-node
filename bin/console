#!/usr/bin/env yarn babel-node --extensions .ts --experimental-repl-await

const repl = require("repl");
const dotenv = require("dotenv");
dotenv.config();

const graphql = require("../src/graphql").default;
const { client, sql } = require("../src/postgres");
client.initialize();

console.log(`
  usage:
    > .help
    .break    Sometimes you get stuck, this gets you out
    .clear    Break, and also clear the local context
    .editor   Enter editor mode
    .exit     Exit the repl
    .help     Print this help message
    .load     Load JS from a file into the REPL session
    .save     Save all evaluated commands in this REPL session to a file

    Press ^C to abort current expression, ^D to exit the repl

    > await db.query(sql\`SELECT NOW() as now\`)
    [ { now: 2020-01-01T16:53:48.115Z } ]
    > const author = await graphql.loaders().authors.getById.load("1")
    { id: '1', name: 'Foo bar', ... }
    > author
    { id: '...', name: 'Foo bar', ... }
`);

const server = repl.start("> ");
server.context.graphql = graphql;
server.context.postgres = client;
server.context.db = client;
server.context.sql = sql;

const historyPath = process.env.NODE_REPL_HISTORY || ".node_repl_history";
server.setupHistory(historyPath, (err, _server) => {
  if (err)
    console.log(`setupHistory error (NODE_REPL_HISTORY=${historyPath})`, err);
});
