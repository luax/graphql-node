{
  "name": "graphql-node",
  "version": "1.0.0",
  "engines": {
    "node": "13.4"
  },
  "private": true,
  "scripts": {
    "test": "jest --coverage",
    "start": "nodemon --exec babel-node ./src/index.ts --extensions .ts",
    "prettier:write": "prettier --write '**/*.{ts,md,yml,yaml,json}'",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "lint": "yarn eslint . && tsc --noEmit",
    "eslint": "eslint --ext .ts",
    "build": "babel src -d dist --extensions \".ts\" --source-maps inline",
    "heroku-prebuild": "echo '//registry.npmjs.org/:_authToken=${NPM_TOKEN}' >> ~/.npmrc",
    "heroku-postbuild": "yarn build"
  },
  "dependencies": {
    "apollo-server": "2.9.16",
    "apollo-server-express": "2.9.16",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dataloader": "2.0.0",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "graphql": "14.5.8",
    "graphql-fields": "2.0.3",
    "helmet": "3.21.2",
    "lodash": "4.17.15",
    "pg": "7.17.1",
    "slonik": "21.4.1"
  },
  "devDependencies": {
    "@babel/cli": "7.8.0",
    "@babel/core": "7.8.0",
    "@babel/node": "7.8.0",
    "@babel/plugin-proposal-class-properties": "7.8.0",
    "@babel/plugin-proposal-optional-chaining": "7.8.0",
    "@babel/preset-env": "7.8.0",
    "@babel/preset-typescript": "7.8.0",
    "@types/compression": "1.0.1",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.2",
    "@types/helmet": "0.0.45",
    "@types/jest": "24.0.25",
    "@types/lodash": "4.14.149",
    "@types/node": "13.1.6",
    "@types/slonik": "21.4.0",
    "@typescript-eslint/eslint-plugin": "2.15.0",
    "@typescript-eslint/parser": "2.15.0",
    "axios": "0.19.1",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-jest": "23.6.0",
    "husky": "4.0.7",
    "jest": "24.9.0",
    "lint-staged": "9.5.0",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "typescript": "3.7.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-optional-chaining"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "tsConfigRootDir": ".",
      "project": [
        "./tsconfig.json"
      ]
    },
    "env": {
      "node": true,
      "es2020": true,
      "jest": true
    },
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "extends": [
      "eslint:all",
      "prettier",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:jest/all"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "all",
          "ignoreRestSiblings": false,
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrors": "all",
          "caughtErrorsIgnorePattern": "^_"
        }
      ],
      "sort-imports": "off",
      "sort-keys": "off",
      "one-var": "off",
      "dot-notation": "off",
      "id-length": "off",
      "max-lines-per-function": "off",
      "init-declarations": "off",
      "multiline-comment-style": "off",
      "no-shadow": "off",
      "no-console": "off",
      "no-magic-numbers": "off",
      "no-process-env": "off",
      "no-warning-comments": "off",
      "no-undefined": "off",
      "no-inline-comments": "off",
      "no-ternary": "off",
      "no-invalid-this": "off",
      "radix": "off",
      "capitalized-comments": "off",
      "line-comment-position": "off",
      "max-params": "off",
      "prefer-destructuring": [
        "error",
        {
          "object": true,
          "array": false
        }
      ],
      "jest/no-hooks": "off",
      "jest/prefer-expect-assertions": "off",
      "jest/prefer-inline-snapshots": "off"
    }
  },
  "jest": {
    "setupFiles": [
      "./jest.setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,md,yml,yaml,json}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts}": [
      "yarn eslint --fix",
      "git add",
      "yarn test --bail --findRelatedTests"
    ]
  }
}
