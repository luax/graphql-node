{
  "name": "graphql",
  "version": "1.0.0",
  "main": "index.js",
  "author": "",
  "license": "",
  "engines": {
    "node": "12.14"
  },
  "scripts": {
    "test": "jest --coverage",
    "start": "nodemon src/index.js",
    "prettier:write": "prettier --write '**/*.{js,md,yml,yaml,json}'"
  },
  "devDependencies": {
    "apollo-server-testing": "2.9.15",
    "axios": "0.19.0",
    "eslint": "6.8.0",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lint-staged": "9.5.0",
    "nodemon": "2.0.2",
    "prettier": "1.19.1"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 10
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "all",
          "ignoreRestSiblings": false,
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrors": "all",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  },
  "dependencies": {
    "apollo-server": "2.9.15",
    "dataloader": "2.0.0",
    "dotenv": "8.2.0",
    "graphql": "14.5.8",
    "lodash.groupby": "4.6.0",
    "lodash.merge": "4.6.2",
    "pg": "7.17.0"
  },
  "jest": {
    "setupFiles": [
      "./jest.setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,md,yml,yaml,json}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js}": [
      "eslint --fix",
      "git add"
    ]
  }
}
